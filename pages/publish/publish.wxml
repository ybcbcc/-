<view class="page-container">
  <!-- 图片上传区域 -->
  <view class="section-title">商品图片</view>
  <view class="image-uploader" bindtap="chooseImage">
    <image wx:if="{{tempImage}}" src="{{tempImage}}" mode="aspectFill" class="uploaded-image"></image>
    <view wx:else class="upload-placeholder">
      <view class="plus-icon">+</view>
      <text>点击上传图片</text>
    </view>
  </view>

  <!-- 描述输入区域 -->
  <view class="section-title">商品描述</view>
  <view class="input-area">
    <textarea 
      class="desc-input" 
      placeholder="请输入商品详细描述..." 
      maxlength="200"
      bindinput="handleInput"
      value="{{description}}"
    ></textarea>
    <view class="word-count">{{description.length}}/200</view>
  </view>

  <!-- 定位区域 -->
  <view class="location-area" bindtap="chooseLocation">
    <view class="location-icon"></view>
    <text class="location-text">{{locationName || '点击添加定位'}}</text>
    <view class="arrow-right"></view>
  </view>

  <!-- 发布按钮 -->
  <button class="submit-btn" bindtap="submitPublish">立即发布</button>
</view>
