/* pages/publish/publish.wxss */
.page-container {
  min-height: 100vh;
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.section-title:first-child {
  margin-top: 0;
}

/* 图片上传 */
.image-uploader {
  width: 200rpx;
  height: 200rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border: 2rpx dashed #ddd;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.plus-icon {
  font-size: 60rpx;
  font-weight: 300;
  margin-bottom: 10rpx;
  line-height: 1;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

/* 描述输入 */
.input-area {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
}

.desc-input {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 定位 */
.location-area {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  margin-top: 40rpx;
}

.location-icon {
  width: 36rpx;
  height: 36rpx;
  background-color: var(--theme-color);
  border-radius: 50%;
  margin-right: 20rpx;
  opacity: 0.8;
}

.location-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.arrow-right {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(45deg);
}

/* 按钮 */
.submit-btn {
  margin-top: 60rpx;
  background-color: var(--theme-color);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(103, 58, 183, 0.3);
}

.submit-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}
