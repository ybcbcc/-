<view class="page-container">
  <!-- 顶部状态卡片 -->
  <view class="status-card">
    <view class="status-tag {{lottery.status === 'active' ? 'active' : ''}}">
      {{lottery.status === 'active' ? '进行中' : '已结束'}}
    </view>
    <view class="time-info">最后修改: {{updatedAt}}</view>
  </view>

  <!-- 活动信息概览 -->
  <view class="info-card">
    <image wx:if="{{lottery.imageUrl}}" src="{{lottery.imageUrl}}" mode="aspectFill" class="cover-image" />
    <view class="title">{{lottery.title}}</view>
    <view class="desc">{{lottery.description || '暂无描述'}}</view>
    
    <view class="detail-row">
      <view class="detail-item">
        <text class="label">奖品</text>
        <text class="value">{{lottery.prizeName}}</text>
      </view>
      <view class="detail-item">
        <text class="label">价值</text>
        <text class="value">{{lottery.prizeValue}}</text>
      </view>
    </view>
    
    <view class="detail-row">
      <view class="detail-item">
        <text class="label">当前参与</text>
        <text class="value highlight">{{lottery.currentParticipants}}/{{lottery.maxParticipants}}</text>
      </view>
      <view class="detail-item">
        <text class="label">中奖概率</text>
        <text class="value">{{lottery.winProbability}}</text>
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-area">
    <button class="btn edit-btn" bindtap="handleEdit">修改活动</button>
    <button class="btn delete-btn" bindtap="handleDelete">删除活动</button>
  </view>
</view>
