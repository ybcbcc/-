.page-container {
  padding: 30rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.form-group {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 120rpx;
  font-size: 30rpx;
  color: #333;
}

.avatar-wrapper {
  padding: 0;
  width: 100rpx !important;
  height: 100rpx !important;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  margin: 0 !important;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.nickname-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

.save-btn {
  background-color: #673ab7;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}
