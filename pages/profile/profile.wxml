<view class="page-container">
  <!-- 顶部个人信息区域 -->
  <view class="user-header">
    <view class="user-info" bindtap="handleLogin">
      <view class="avatar-container">
        <image class="avatar" src="{{userInfo.avatarUrl || ''}}" mode="aspectFill"></image>
        <view wx:if="{{!userInfo.avatarUrl}}" class="avatar-placeholder"></view>
      </view>
      <text class="nickname">{{userInfo.nickName}}</text>
    </view>
  </view>

  <!-- 菜单列表区域 -->
  <view class="menu-list">
    <block wx:for="{{menuList}}" wx:key="id">
      <button wx:if="{{item.id === 'contact'}}" class="menu-item" open-type="contact" session-from="profile">
        <view class="menu-icon-placeholder"></view>
        <text class="menu-title">{{item.title}}</text>
        <view class="arrow-right"></view>
      </button>
      <view wx:else class="menu-item" bindtap="handleMenuClick" data-item="{{item}}">
        <view class="menu-icon-placeholder"></view>
        <text class="menu-title">{{item.title}}</text>
        <block wx:if="{{item.id === 'integral'}}">
          <text class="points-value">{{userInfo.integral}}</text>
        </block>
        <block wx:else>
          <view class="arrow-right"></view>
        </block>
      </view>
    </block>
  </view>
</view>
