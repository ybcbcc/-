<view class="page-container">
  <view class="card">
    <image wx:if="{{item.imageUrl}}" src="{{item.imageUrl}}" mode="aspectFill" class="cover" />
    <view class="title">{{item.title}}</view>
    <view class="desc">{{item.description || '暂无描述'}}</view>
    <view class="row">
      <text class="label">奖品</text><text class="value">{{item.prizeName}}</text>
    </view>
    <view class="row">
      <text class="label">价值</text><text class="value">{{item.prizeValue}}</text>
    </view>
    <view class="row">
      <text class="label">参与</text><text class="value">{{item.currentParticipants}} / {{item.maxParticipants}}</text>
    </view>
    <view class="row">
      <text class="label">概率</text><text class="value">{{item.winProbability}}</text>
    </view>
    <view class="row">
      <text class="label">状态</text><text class="value">{{item.status}} / {{item.auditStatus}}</text>
    </view>
    <view class="row">
      <text class="label">截止</text><text class="value">{{item.endTime}}</text>
    </view>
  </view>
  <view class="footer-bar">
    <button class="btn approve" bindtap="handleApprove">审核通过</button>
    <button class="btn reject" bindtap="handleReject">拒绝</button>
  </view>
</view>
