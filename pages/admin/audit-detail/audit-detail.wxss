.page-container {
  padding: 16rpx;
}
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
}
.cover {
  width: 100%;
  height: 240rpx;
  border-radius: 12rpx;
}
.title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 12rpx 0;
}
.desc {
  font-size: 26rpx;
  color: #666;
}
.row {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
}
.label {
  color: #999;
}
.value {
  color: #333;
}
.footer-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  padding: 12rpx;
  background: #fff;
  gap: 12rpx;
}
.btn {
  flex: 1;
}
.approve {
  background: #4caf50;
  color: #fff;
}
.reject {
  background: #f44336;
  color: #fff;
}
