.page-container {
  padding: 16rpx;
  background-color: var(--page-bg);
  min-height: 100vh;
}
.form-item {
  margin-bottom: 16rpx;
}
.label {
  display: block;
  color: #666;
  margin-bottom: 8rpx;
}
.input, .textarea, .picker {
  background: #fff;
  border-radius: 8rpx;
  padding: 12rpx;
}
.textarea {
  min-height: 160rpx;
}
.image-uploader {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
.uploaded-image {
  width: 100%;
  height: 100%;
}
.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}
.plus-icon {
  font-size: 56rpx;
  color: #ccc;
  line-height: 1;
  margin-bottom: 8rpx;
}
.submit-row {
  margin-top: 24rpx;
}
.submit-btn {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #673ab7;
  color: #fff;
  border-radius: 8rpx;
}
