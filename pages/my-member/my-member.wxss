/* pages/my-member/my-member.wxss */
.page-container {
  min-height: 100vh;
  background-color: var(--page-bg);
  padding: 40rpx;
  box-sizing: border-box;
}

.member-card {
  background: linear-gradient(135deg, #673ab7, #9575cd);
  border-radius: 20rpx;
  padding: 40rpx;
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(103, 58, 183, 0.3);
  margin-bottom: 60rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.vip-icon {
  background-color: #ffd700;
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  opacity: 0.9;
}

.divider {
  height: 2rpx;
  background-color: rgba(255, 255, 255, 0.2);
  margin: 30rpx 0;
}

.highlight {
  align-items: flex-end;
}

.highlight .value.big {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffd700;
}

.renew-btn {
  background-color: #fff;
  color: var(--theme-color);
  border-radius: 44rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
