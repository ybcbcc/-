<view class="lottery-item" bindtap="onTap">
  <view class="item-image">
    <image wx:if="{{item.imageUrl}}" src="{{item.imageUrl}}" mode="aspectFill" class="real-image" />
    <view wx:else class="placeholder-img"></view>
  </view>
  <view class="item-content">
    <view class="item-title">{{item.title}}</view>
    <view class="item-status">{{item.status}}</view>
  </view>
</view>
